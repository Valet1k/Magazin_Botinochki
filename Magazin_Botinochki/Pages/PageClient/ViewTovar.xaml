<Page
    x:Class="Magazin_Botinochki.Pages.ViewTovar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magazin_Botinochki.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViewTovar"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="Lavender">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Button
            Name="Btn_login"
            Width="100"
            Margin="5"
            HorizontalAlignment="Right"
            Click="Btn_login_Click"
            Content="Войти" />



        <ScrollViewer
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="ItemsViewTovar" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="250"
                            Margin="5"
                            Padding="10"
                            Background="White"
                            BorderBrush="LightGray"
                            BorderThickness="1">

                            <StackPanel>
                                <!--  Картинка товара  -->
                                <Image
                                    Height="150"
                                    Margin="0,0,0,10"
                                    Source="{Binding ImagePath}"
                                    Stretch="Uniform" />

                                <!--  Название товара  -->
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding NameTovar}" />

                                <!--  Описание  -->
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="12"
                                    Text="{Binding DescriptionTovar}"
                                    TextWrapping="Wrap" />

                                <!--  Цена  -->
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="13"
                                    Text="{Binding Price, StringFormat='Цена: {0}₽'}" />

                                <!--  Кнопка купить  -->
                                <Button
                                    Width="100"
                                    Padding="5,2"
                                    HorizontalAlignment="Center"
                                    Content="Купить" />
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
