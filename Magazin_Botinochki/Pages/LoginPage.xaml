<Page
    x:Class="Magazin_Botinochki.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magazin_Botinochki.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    Margin="5"
                    FontSize="16"
                    Text="Логин:" />
                <TextBox
                    x:Name="Txb_Login"
                    Width="155"
                    KeyDown="Txb_Login_KeyDown"
                    Margin="5" />
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    Margin="5"
                    FontSize="16"
                    Text="Пароль:" />
                <PasswordBox
                    x:Name="Psb_pass"
                    Width="155"
                    Margin="5" />
            </StackPanel>

            <StackPanel
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="Btn_vxod"
                    Width="150"
                    Height="35"
                    Click="Btn_vxod_Click"
                    Content="Войти" />
            </StackPanel>

        </StackPanel>



    </Grid>
</Page>
