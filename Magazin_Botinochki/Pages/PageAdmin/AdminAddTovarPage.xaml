<Page
    x:Class="Magazin_Botinochki.Pages.PageAdmin.AdminAddTovarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magazin_Botinochki.Pages.PageAdmin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminAddTovarPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="Times New Roman"
    mc:Ignorable="d">

    <Grid Background="White">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Артикул продукта:" />
                <TextBox
                    x:Name="Txb_Article"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Имя продукта:" />

                <ComboBox
                    x:Name="Cmb_NameProduct"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Цена:" />

                <TextBox
                    x:Name="Txb_Price"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Поставщик" />

                <ComboBox
                    x:Name="Cmb_Supplier"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">

                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Производитель:" />

                <ComboBox
                    x:Name="Cmb_Manufacturer"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Категория продукта:" />

                <ComboBox
                    x:Name="Cmb_ProducrCategory"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Действующая скидка:" />

                <TextBox
                    x:Name="Txb_CurrentDiscount"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Количество на складе:" />

                <TextBox
                    x:Name="Txb_QuantityStock"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Описание:" />

                <TextBox
                    x:Name="Txb_Description"
                    Width="180"
                    Margin="5,0,0,0" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="169"
                    FontSize="18"
                    Text="Фото:" />

                <Button
                    Width="180"
                    Click="Button_Click"
                    Content="Выбрать файл" />
            </StackPanel>


            <Button
                Width="350"
                Height="35"
                Margin="10"
                Content="Создать товар" />
        </StackPanel>


    </Grid>
</Page>
